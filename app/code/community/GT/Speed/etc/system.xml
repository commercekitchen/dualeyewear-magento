<?xml version="1.0"?>
<config>
    <tabs>
        <gt translate="label" module="gtspeed">
            <label>GT Modules</label>
            <sort_order>100</sort_order>
        </gt>
    </tabs>
    <sections>
        <gtspeed translate="label" module="gtspeed">
            <label>GTspeed</label>
            <tab>gt</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <cssjs translate="label">
                    <label>CSS/JavaScript Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>1</sort_order>
                    <fields>
                        <merge_css translate="label">
                            <label>Combine CSS Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends><min_css>1</min_css></depends>
                        </merge_css>
                        <merge_js translate="label">
                            <label>Combine JavaScript Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends><min_js>1</min_js></depends>
                        </merge_js>
                        <min_css translate="label">
                            <label>Minify CSS Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </min_css>
                        <min_js translate="label">
                            <label>Minify JavaScript Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </min_js>
                    </fields>
                </cssjs>
                <cssdebug>
                    <label>CSS/JavaScript Debug</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>2</sort_order>
                    <fields>
                        <errorlogger translate="label">
                            <label>Enable FirePHP Error Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </errorlogger>
                        <debugflag translate="label">
                            <label>Enable Debug Mode Output</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>See the minify library documentation for more details</comment>
                        </debugflag>
                    </fields>
                </cssdebug>
                <imgopt>
                    <label>Image Optimization Utilities</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>3</sort_order>
                    <fields>
                        <gifutil translate="label">
                            <label>GIF Optimization Utility</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Do not include the .exe extension for Windows binaries.<br />Place the binary in {{base_dir}}/lib/gtspeed/&lt;OS&gt;<br />Where &lt;OS&gt; is "win32" for windows, "elf32" otherwise.<br /><strong>Command line binaries only!</strong>]]></comment>
                        </gifutil>
                        <gifutilopt translate="label">
                            <label>GIF Optimization Utility Command Line Options</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </gifutilopt>
                        <jpgutil translate="label">
                            <label>JPEG Optimization Utility</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Do not include the .exe extension for Windows binaries.<br />Place the binary in {{base_dir}}/lib/gtspeed/&lt;OS&gt;<br />Where &lt;OS&gt; is "win32" for windows, "elf32" otherwise.<br /><strong>Command line binaries only!</strong>]]></comment>
                        </jpgutil>
                        <jpgutilopt translate="label">
                            <label>JPEG Optimization Utility Command Line Options</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </jpgutilopt>
                        <pngutil translate="label">
                            <label>PNG Optimization Utility</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Do not include the .exe extension for Windows binaries.<br />Place the binary in {{base_dir}}/lib/gtspeed/&lt;OS&gt;<br />Where &lt;OS&gt; is "win32" for windows, "elf32" otherwise.<br /><strong>Command line binaries only!</strong>]]></comment>
                        </pngutil>
                        <pngutilopt translate="label">
                            <label>PNG Optimization Utility Command Line Options</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pngutilopt>
                    </fields>
                </imgopt>
                <imgpath>
                    <label>Image Optimization Paths</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>4</sort_order>
                    <fields>
                        <paths translate="label">
                            <label>Paths to Index</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Paths to search for image files to index.<br />Relative to {{base_dir}}/ separated by commas.]]></comment>
                        </paths>
                    </fields>
                </imgpath>
                <imgdebug>
                    <label>Image Optimization Debug</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>5</sort_order>
                    <fields>
                        <imgoutput translate="label">
                            <label>Enable Image Optimization Debug Output</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Log file located at {{base_dir}}/var/log/gtspeed.log</comment>
                        </imgoutput>
                    </fields>
                </imgdebug>
                <cron>
                    <label>Scheduled Task Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>6</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Scheduled Image Reindexing and Optimization</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <frequency translate="label">
                            <label>Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cron_frequency</source_model>
                            <backend_model>gtspeed/system_config_backend_cron</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </frequency>
                        <time translate="label">
                            <label>Start Time</label>
                            <frontend_type>time</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </time>
                        <error_email translate="label">
                            <label>Error Email Recipient</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </error_email>
                        <error_email_identity translate="label">
                            <label>Error Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </error_email_identity>
                        <error_email_template translate="label">
                            <label>Error Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </error_email_template>
                    </fields>
                </cron>
                <expires>
                    <label>Expires Header Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>7</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Expires Headers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>gtspeed/system_config_backend_expires</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>.htaccess needs to be writable for GTspeed to enable Expires Headers</comment>
                        </enabled>
                        <filetypes translate="label">
                            <label>File Types to Apply Expires Headers</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>gtspeed/system_config_source_expires_filetype</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </filetypes>
                        <time translate="label">
                            <label>Time to Set (seconds)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Based on last modified time</comment>
                        </time>
                    </fields>
                </expires>
<unsecure translate="label">
                    <label>Unsecure CDNs</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <base_skin_url translate="label">
                            <label>Skin CDN domain</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>adminhtml/system_config_backend_baseurl</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_skin_url>
                        <base_js_url translate="label comment">
                            <label>JavaScript CDN domain</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>adminhtml/system_config_backend_baseurl</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>&lt;strong style="color:red"&gt;Warning!&lt;/strong&gt; When using CDN, in some cases JavaScript may not run properly if CDN is not in your subdomain</comment>
                        </base_js_url>
                    </fields>
                </unsecure>
                <secure translate="label">
                    <label>Secure CDNs</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <base_skin_url translate="label">
                            <label>Skin CDN domain</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>adminhtml/system_config_backend_baseurl</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_skin_url>
                        <base_js_url translate="label comment">
                            <label>JavaScript CDN domain</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>adminhtml/system_config_backend_baseurl</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>&lt;strong style="color:red"&gt;Warning!&lt;/strong&gt; When using CDN, in some cases JavaScript may not run properly if CDN is not in your subdomain</comment>
                        </base_js_url>
                    </fields>
                </secure>
            </groups>
        </gtspeed>
    </sections>
</config>
